{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2015",
      "es2017",
      "es2018.promise"
    ],
    "importHelpers": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.macro.ts",
    "src/**/*.spec.ts"
  ]
}
